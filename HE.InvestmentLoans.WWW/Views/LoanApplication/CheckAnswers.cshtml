@model HE.InvestmentLoans.BusinessLogic.ViewModel.LoanApplicationViewModel

<gds-div-grid-column-two-thirds>
    <form asp-controller="LoanApplication" asp-action="Workflow" asp-route-id="@Model.ID" asp-route-ending="CheckAnswers" asp-method="post" novalidate>
        <gds-back-link href="@Url.Action("GoBack","LoanApplication", new {id = Model.ID})" text="Back" class="govuk-!-margin-bottom-8">
        </gds-back-link>

        <gds-h1 size="HeaderSize.Xl">
            Check your answers before submitting your application
        </gds-h1>


        <gds-h2>Company structure and experience</gds-h2>
        @await Html.PartialAsync("_CompanyStructureAnswers", Model.Company)

        <gds-h2>Funding details</gds-h2>
        @await Html.PartialAsync("_FundingAnswers", Model.Funding)

        <gds-h2>Security details</gds-h2>
        @await Html.PartialAsync("_SecurityAnswers", Model.Security)

        <gds-h2>Site details</gds-h2>
        @foreach (var site in Model.Sites)
        {
            @await Html.PartialAsync("_SiteAnswers", site)
        }


        <gds-h2 size="HeaderSize.M">Check and submit</gds-h2>
        <p>You must complete all sections before you can submit your application.</p>

        <button class="govuk-button" data-module="govuk-button" name="action" type="submit" value="Continue">
            Check and submit application
        </button>
    </form>
</gds-div-grid-column-two-thirds>