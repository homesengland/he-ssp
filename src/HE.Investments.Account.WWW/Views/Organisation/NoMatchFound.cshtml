@using HE.Investments.Account.WWW.Views.Organisation
@{
    ViewData["Title"] = "Organization Not Found";
}

<gds-div-grid-column-two-thirds>
    <gds-back-link class="govuk-!-margin-bottom-8" href="@Url.Action("SearchOrganization","Organisation")"></gds-back-link>

    <gds-h1 size="ControlSize.L">
        @OrganizationPageTitles.NoMatch

    </gds-h1>

    <gds-p>
        We could not find the details you entered in our records.
    </gds-p>

    <gds-p>
        If you think you have entered the wrong details, you can
        <gds-link href="@Url.Action("SearchOrganization","Organisation")">
            try again using a different name.
        </gds-link>
    </gds-p>

    <gds-p>
        Or,
        <gds-link href="@Url.Action("CreateOrganisation", "Organisation")">
            enter the details manually.
        </gds-link>
    </gds-p>

</gds-div-grid-column-two-thirds>
