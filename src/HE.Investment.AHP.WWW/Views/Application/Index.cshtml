@using HE.Investment.AHP.WWW.Views.Application
@using HE.Investments.Common.Gds
@using HE.Investments.Common.WWW.Components.PageHeader
@using HE.Investment.AHP.WWW.Routing
@model HE.Investment.AHP.WWW.Models.Application.ApplicationsListModel
@{
    ViewData["Title"] = ApplicationPageTitles.ApplicationList;
    ViewBag.Breadcrumbs = AhpBreadcrumbsBuilder
        .Empty()
        .WithOrganisation(Model.OrganisationName)
        .WithApplicationsList()
        .Build();
}

<div class="govuk-grid-column-two-thirds govuk-!-padding-top-4">
    <vc:notification/>
</div>

<div class="govuk-grid-column-full">
    <vc:page-header title="@ApplicationPageTitles.ApplicationList" caption="@Model.OrganisationName" additional-css-class="govuk-!-padding-top-2"/>

    @if (Model.Result.TotalItems > 0)
    {
        <gds-h2>Your applications</gds-h2>
        <vc:applications-table applications="@Model.Result"/>
    }

    <div>
        <gds-h2>
            Affordable Homes Programme Continuous Market Engagement 2021-2026
        </gds-h2>
        <p class="govuk-body govuk-!-margin-bottom-3 govuk-!-width-two-thirds">You can start a new Affordable Homes Programme application. This will not affect any of your previous applications.</p>

        <link-button button-type="@ButtonType.Start"
                     action-url="@Url.Action("Start", "Application")"
                     is-disabled="@Model.IsReadOnly">
            Start
        </link-button>
    </div>

    <div class="govuk-!-padding-top-2">
            <gds-h2>
                View sites
            </gds-h2>
            <p class="govuk-body govuk-!-margin-bottom-3 govuk-!-width-two-thirds">View a list of your existing sites. New sites can be created as part of a new application.</p>

            <link-button button-type="@ButtonType.Secondary" action-url="@Url.Action("Index", "Site")">View sites</link-button>
        </div>
</div>
