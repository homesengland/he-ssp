@using HE.Investment.AHP.Contract.SitePartners
@using HE.Investment.AHP.WWW.Views.Shared.Components.AhpWorkflowBackButton
@using HE.Investment.AHP.WWW.Views.SitePartners.Const
@using HE.Investments.Common.WWW.Components.PageHeader
@{
    ViewData["Title"] = SitePartnersPageTitles.OwnerOfTheHomes;
    var workflow = Context.Request.Query["workflow"];
}

<gds-div-grid-column-two-thirds>
    <vc:ahp-workflow-back-button current-page="@SitePartnersWorkflowState.UnregisteredBodyCreateManual"/>
    @await Html.PartialAsync("~/Partials/Errors/_ErrorSummaryPartial.cshtml")
    <vc:page-header title="@SitePartnersPageTitles.OwnerOfTheHomes" caption="@ViewBag.SiteName"/>

    <he-organisation-form asp-controller="SitePartners" asp-action="UnregisteredBodyCreateManual" asp-route-workflow=@workflow asp-method="post" novalidate>
        <vc:text-input
            title="Enter the name of the owner of the homes after completion"
            title-type="InputTitleType.InputTitle"
            field-name="@nameof(Model.Name)"
            value="@Model.Name"/>

        <gds-field-set role="group">
            <gds-legend>
                <gds-h2>Registered address</gds-h2>
            </gds-legend>

            <vc:text-input
                title="Address line 1"
                title-type="InputTitleType.InputDescription"
                field-name="@nameof(Model.AddressLine1)"
                value="@Model.AddressLine1"/>

            <vc:text-input
                title="Address line 2 (optional)"
                title-type="InputTitleType.InputDescription"
                field-name="@nameof(Model.AddressLine2)"
                value="@Model.AddressLine2"/>

            <vc:text-input
                title="Town or city"
                title-type="InputTitleType.InputDescription"
                field-name="@nameof(Model.TownOrCity)"
                value="@Model.TownOrCity"/>

            <vc:text-input
                title="County (optional)"
                title-type="InputTitleType.InputDescription"
                field-name="@nameof(Model.County)"
                value="@Model.County"/>

            <vc:text-input
                title="Postcode"
                title-type="InputTitleType.InputDescription"
                field-name="@nameof(Model.Postcode)"
                css-class="govuk-!-width-one-half"
                value="@Model.Postcode"/>
        </gds-field-set>

        <vc:form-button/>
        <vc:return-to-sites-link project-id="@ViewBag.ProjectId"/>
    </he-organisation-form>
</gds-div-grid-column-two-thirds>
