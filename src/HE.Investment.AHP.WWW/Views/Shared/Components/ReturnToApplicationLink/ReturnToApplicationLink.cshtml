@using HE.Investments.Common.Messages
@using HE.Investments.Common.WWW.Components.LinkWorkingAsButton


@model (string ApplicationId, bool IsEditable)

<div>
    @if (Model.IsEditable)
    {
        <vc:link-working-as-button text="Save and return to application" name="action" value="@GenericMessages.SaveAndReturn"/>
    }
    else
    {
        <gds-link class="govuk-link--no-visited-state"
                  href="@Url.Action("TaskList", "Application", new { applicationId = Model.ApplicationId })">
            Return to application
        </gds-link>
    }
</div>
