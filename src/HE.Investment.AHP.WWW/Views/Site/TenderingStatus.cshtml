@using HE.Investments.Common.WWW.Components.FormButton
@using HE.Investment.AHP.Contract.Site
@using HE.Investment.AHP.WWW.Views.Shared.Components.AhpWorkflowBackButton
@using HE.Investment.AHP.WWW.Views.Site.Const
@using HE.Investments.Common.WWW.Components.RadioList
@using HE.Investments.Common.WWW.Helpers
@model SiteTenderingStatusDetails
@{
    ViewData["Title"] = SitePageTitles.TenderingStatus;
}
<gds-div-grid-column-two-thirds>
    <vc:ahp-workflow-back-button current-page="@SiteWorkflowState.TenderingStatus"/>
    @await Html.PartialAsync("~/Partials/Errors/_ErrorSummaryPartial.cshtml")
    <vc:page-header caption="@ViewBag.SiteName"/>

    <form asp-controller="Site" asp-action="TenderingStatus" asp-route-workflow="@Context.Request.Query["workflow"]" asp-method="post" novalidate>

        <vc:radio-list
            title="@SitePageTitles.TenderingStatus"
            title-type="InputTitleType.PageHeader"
            field-name="@nameof(Model.TenderingStatus)"
            available-options="@SelectListHelper.FromEnumToExtendedList<SiteTenderingStatus>()"
            value=@Model.TenderingStatus/>

        <vc:form-button/>
        <vc:return-to-sites-link project-id="@ViewBag.ProjectId" />
    </form>

</gds-div-grid-column-two-thirds>
