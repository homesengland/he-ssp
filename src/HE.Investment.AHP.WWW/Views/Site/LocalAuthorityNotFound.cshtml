@using He.AspNetCore.Mvc.Gds.Components.TagHelpers.Divs
@using He.AspNetCore.Mvc.Gds.Components.TagHelpers.Headings
@using He.AspNetCore.Mvc.Gds.Components.TagHelpers.Links
@using He.AspNetCore.Mvc.Gds.Components.TagHelpers.Paragraphs
@using HE.Investment.AHP.Contract.Site
@using HE.Investment.AHP.WWW.Views.Shared.Components.AhpWorkflowBackButton
@using HE.Investment.AHP.WWW.Views.Site.Const
@model HE.Investment.AHP.Contract.Site.LocalAuthorities;
@{
    ViewData["Title"] = SitePageTitles.LocalAuthorityNotFound;
    var redirect = Context.Request.Query["redirect"];
}

<gds-div-grid-column-two-thirds>
    <vc:ahp-workflow-back-button current-page="@SiteWorkflowState.LocalAuthorityReset"/>

    <vc:page-header title="@SitePageTitles.LocalAuthorityNoMatch" caption="@ViewBag.SiteName"/>

    <gds-p>
        We could not find the details you entered in our records.
    </gds-p>

    <gds-p>
        If you think you have entered the wrong details, you can
        <gds-link href="@Url.Action("LocalAuthoritySearch", "Site", new { siteId = Model.SiteId, redirect })" data-testid="local-authority-search-link">
            try again using a different name.
        </gds-link>
    </gds-p>

    <gds-p>
        If your local authority is not listed above, your
        <gds-link href="@Url.Action("LocalAuthorityReset", "Site", new { siteId = Model.SiteId, redirect })" data-testid="assign-empty-local-authority-link">
            Growth Manager can add this for you later.
        </gds-link>
    </gds-p>

    <vc:return-to-sites-link is-link-inside-form="false"/>
    @Html.HiddenFor(c => c.SiteId)
</gds-div-grid-column-two-thirds>
