@using HE.Investments.Common.WWW.Components.FormButton
@using HE.Investment.AHP.Contract.Site
@using HE.Investment.AHP.WWW.Views.Shared.Components.AhpWorkflowBackButton
@using HE.Investment.AHP.WWW.Views.Shared.Components.ReturnToSitesLink
@using HE.Investment.AHP.WWW.Views.Site.Const
@using HE.Investments.Common.WWW.Components.CheckboxList
@using HE.Investments.Common.WWW.Components.PageHeader
@using HE.Investments.Common.WWW.Helpers
@using HE.Investment.AHP.Contract.HomeTypes.Enums
@model SiteModernMethodsOfConstruction
@{
    ViewData["Title"] = SitePageTitles.Mmc3DCategory;
}

<gds-div-grid-column-two-thirds>
    <vc:ahp-workflow-back-button current-page="@SiteWorkflowState.Mmc3DCategory"/>
    @await Html.PartialAsync("~/Partials/Errors/_ErrorSummaryPartial.cshtml")
    <vc:page-header caption="@ViewBag.SiteName" title="@SitePageTitles.Mmc3DCategory"/>

    <form asp-controller="Site" asp-action="Mmc3DCategory" asp-route-workflow="@Context.Request.Query["workflow"]" asp-method="post" novalidate>

        <vc:checkbox-list
            title="Which of these sub-categories of 3D primary structural systems are you using?"
            hint="Select all that apply."
            field-name="@nameof(Model.ModernMethodsConstruction3DSubcategories)"
            available-options="@SelectListHelper.FromEnumToExtendedList<ModernMethodsConstruction3DSubcategoriesType>()"
            selected-values="@Model.ModernMethodsConstruction3DSubcategories?.Cast<Enum>()"/>

        <vc:form-button/>
        <vc:return-to-sites-link project-id="@ViewBag.ProjectId" />
    </form>

</gds-div-grid-column-two-thirds>
