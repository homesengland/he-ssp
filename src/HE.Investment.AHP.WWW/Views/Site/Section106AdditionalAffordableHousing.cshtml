@using HE.Investments.Common.WWW.Components.FormButton
@using HE.Investment.AHP.Contract.Site
@using HE.Investment.AHP.WWW.Views.Site.Const
@model Section106Dto
@{
    ViewData["Title"] = SitePageTitles.SiteSection106AdditionalAffordableHousing;
}
<gds-div-grid-column-two-thirds>
    <vc:ahp-workflow-back-button current-page="@SiteWorkflowState.Section106AdditionalAffordableHousing" />
    @await Html.PartialAsync("~/Partials/Errors/_ErrorSummaryPartial.cshtml")

    <form asp-controller="Site" asp-action="Section106AdditionalAffordableHousing" asp-route-workflow="@Context.Request.Query["workflow"]" asp-method="post" novalidate>
        <vc:page-header title="@SitePageTitles.SiteSection106AdditionalAffordableHousing" caption="@Model.SiteName"/>

        <vc:radio-yes-no field-name="@nameof(Model.AdditionalAffordableHousing)"
                         title="Are the homes contained within this application additional to the affordable housing secured through the developer contributions?"
            value="@Model.AdditionalAffordableHousing"/>

        @Html.HiddenFor(x => x.SiteId)

        <vc:form-button />
        <vc:return-to-sites-link project-id="@ViewBag.ProjectId" />
    </form>

</gds-div-grid-column-two-thirds>
