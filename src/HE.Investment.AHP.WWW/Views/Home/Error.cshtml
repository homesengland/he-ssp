@model HE.Investments.Common.WWW.Infrastructure.ErrorHandling.ErrorModel;
@{
    ViewData["Title"] = "Sorry, there is a problem with the service";
}

<div>
    <gds-div-grid-column-two-thirds>
        <a href="#" class="govuk-back-link" id="js-back-link">Back</a>

        <h1 class="govuk-heading-l">Sorry, there is a problem with the service</h1>

        <p class="govuk-body">
            Contact the help to build team:<br/>
            <a href="mailto:helptobuildtechsupport@homesengland.gov.uk">helptobuildtechsupport@homesengland.gov.uk</a>
        </p>
        <p class="govuk-body">
            We aim to respond within 2 working days.
        </p>
    </gds-div-grid-column-two-thirds>

    @if (!string.IsNullOrEmpty(Model?.Message))
    {
        <div class="govuk-grid-column-full">
            <gds-h2 size="ControlSize.S">Message:</gds-h2>
            <gds-p>@Model.Message</gds-p>
        </div>
    }

</div>

<environment include="Development">
    <script src="~/javascripts/history.js" defer="defer"></script>
</environment>

<environment exclude="Development">
    <script src="~/javascripts/history.min.js" defer="defer"></script>
</environment>
