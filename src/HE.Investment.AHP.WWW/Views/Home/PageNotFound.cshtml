@using HE.Investment.AHP.WWW.Common
@model HE.Investments.Common.WWW.Infrastructure.ErrorHandling.ErrorModel;
@{
    ViewData["Title"] = "Page not found";
}

<div>
    <gds-div-grid-column-two-thirds>
        <a href="#" class="govuk-back-link" id="js-back-link">Back</a>

        <h1 class="govuk-heading-l">Page not found</h1>
        <p class="govuk-body">
            If you believe that you should be able to access this page, you can:
            <ul class="govuk-list govuk-list--bullet">
                <li>try again later</li>
                <li>
                    contact the Help to Build team:<br/>
                    <a href="@ExternalLinks.Get(nameof(ExternalLinks.MailToHelpToBuildTechSupport))">helptobuildtechsupport@homesengland.gov.uk</a>
                </li>
            </ul>
        </p>
    </gds-div-grid-column-two-thirds>

    @if (!string.IsNullOrEmpty(Model?.Message))
    {
        <div class="govuk-grid-column-full">
            <gds-h2 size="ControlSize.S">Message:</gds-h2>
            <gds-p>@Model.Message</gds-p>
        </div>
    }
</div>

<environment include="Development">
    <script src="~/javascripts/history.js" defer="defer"></script>
</environment>

<environment exclude="Development">
    <script src="~/javascripts/history.min.js" defer="defer"></script>
</environment>
