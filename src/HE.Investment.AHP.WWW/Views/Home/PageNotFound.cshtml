@using HE.Investment.AHP.WWW.Config
@inject IAhpExternalLinks ExternalLinks
@model HE.Investments.Common.WWW.Infrastructure.ErrorHandling.ErrorModel;
@{
    ViewData["Title"] = "Page not found";
}

<div>
    <gds-div-grid-column-two-thirds>
        <a href="#" class="govuk-back-link" id="js-back-link">Back</a>

        <h1 class="govuk-heading-l">Page not found</h1>
        <p class="govuk-body">If you believe that you should be able to access this page, you can: </p>
        <ul class="govuk-list govuk-list--bullet">
            <li>try again later</li>
            <li>contact the Homes England Enquiries team:</li>
        </ul>
        <p>
            Telephone: 0300 1234 500 (weekdays from 9am to 5pm)<br/>
            Email: <a href="@ExternalLinks.MailToHomesEnglandTeam">enquiries@homesengland.gov.uk</a>
        </p>
    </gds-div-grid-column-two-thirds>

    @if (!string.IsNullOrEmpty(Model?.Message))
    {
        <div class="govuk-grid-column-full">
            <gds-h2 size="ControlSize.S">Message:</gds-h2>
            <gds-p>@Model.Message</gds-p>
        </div>
    }
</div>
