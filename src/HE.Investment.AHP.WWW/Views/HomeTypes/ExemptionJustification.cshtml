@using HE.Investment.AHP.Domain.HomeTypes
@using HE.Investment.AHP.WWW.Extensions
@model HE.Investment.AHP.WWW.Models.HomeTypes.MoreInformationModel;

@{
    var applicationId = this.GetApplicationIdFromRoute();
    var homeTypeId = this.GetHomeTypeIdFromRoute();
}

<gds-div-grid-column-two-thirds>
    <form asp-controller="HomeTypes" asp-action="ExemptionJustification" asp-method="post" novalidate>
        @Html.HiddenFor(m => Model.ApplicationName)
        @Html.HiddenFor(m => Model.HomeTypeName)
        <vc:home-type-form-header current-page="@HomeTypesWorkflowState.ExemptionJustification"
                                  application-id="@applicationId"
                                  home-type-id="@homeTypeId"
                                  caption="@Model.Header"
                                  title="Outline the criteria under which you intend to apply for an exemption to the Right to Shared Ownership"/>

        <gds-field-set class="govuk-!-margin-bottom-6 govuk-!-margin-top-6">
            <details class="govuk-details govuk-!-margin-bottom-6" data-module="govuk-details">
                <summary class="govuk-details__summary">
                    <span class="govuk-details__summary-text">
                        What is the Right to Shared Ownership?
                    </span>
                </summary>
                <div class="govuk-details__text">
                    The Right to Shared Ownership applies to all new rented homes delivered through the Affordable Homes Programme 2021-26, with limited exceptions.
                    <a class="govuk-link" target="_blank"
                       href="https://www.gov.uk/government/publications/right-to-shared-ownership-initial-guidance-for-registered-providers/right-to-shared-ownership-initial-guidance-for-registered-providers">
                        Read about the Right to Shared Ownership and the types of property that are in scope (opens in the new tab).
                    </a>
                </div>
            </details>

            <vc:form-hidden-label
                field-name="MoreInformation"
                title="More information"/>
            <he-text-area asp-for="MoreInformation" rows="7" class="govuk-!-margin-bottom-1" label="asd"></he-text-area>
            <gds-span-hint>You can enter up to 1500 characters</gds-span-hint>
        </gds-field-set>

        <button class="govuk-button" data-module="govuk-button" name="action" type="submit" value="Continue" id="continue-button">
            Save and continue
        </button>
        <br/>

        <vc:return-to-application-link application-id="@applicationId"/>
    </form>
</gds-div-grid-column-two-thirds>
