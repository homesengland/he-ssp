@using HE.Investment.AHP.Domain.HomeTypes
@using HE.Investment.AHP.WWW.Extensions
@using HE.Investment.AHP.WWW.Models.HomeTypes
@using HE.Investments.Common.Gds
@model HE.Investment.AHP.WWW.Models.HomeTypes.HomesForOlderPeopleModel;

@{
    var applicationId = this.GetApplicationIdFromRoute();
    var homeTypeId = this.GetHomeTypeIdFromRoute();
}

<div class="govuk-grid-column-full">
    <form asp-controller="HomeTypes" asp-action="HomesForOlderPeople" asp-method="post" novalidate>
        <gds-back-link href="@Url.Action("Back","HomeTypes", new { applicationId, homeTypeId, currentPage = HomeTypesWorkflowState.HomesForOlderPeople})" text="Back" class="govuk-!-margin-bottom-8"></gds-back-link>

        <gds-div-hint>@Model.Header</gds-div-hint>
        <gds-div-grid-column-two-thirds class="govuk-!-padding-left-0">
            <gds-h1 size="ControlSize.L">
                What type of homes will you be providing for older people?
            </gds-h1>

            <gds-field-set>
                <gds-custom-radio
                    asp-for="HousingType"
                    value="@Model.HousingType"
                    radio-items="HomeTypesFormOptions.OlderPeopleHousingTypes"
                    class="govuk-!-margin-bottom-8">
                </gds-custom-radio>

                <button class="govuk-button" data-module="govuk-button" name="action" type="submit" value="Continue" id="continue-button">
                    Save and continue
                </button>
            </gds-field-set>

            <gds-link>Save and return to application</gds-link>
        </gds-div-grid-column-two-thirds>
    </form>
</div>
