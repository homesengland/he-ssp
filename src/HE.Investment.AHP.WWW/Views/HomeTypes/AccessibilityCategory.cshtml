@using HE.Investment.AHP.Domain.HomeTypes
@using HE.Investment.AHP.WWW.Extensions
@using HE.Investment.AHP.WWW.Models.HomeTypes
@using HE.Investment.AHP.WWW.Views.Shared.Components.HomeTypeFormHeader
@using HE.Investment.AHP.WWW.Views.Shared.Components.ReturnToApplicationLink
@model HE.Investment.AHP.WWW.Models.HomeTypes.AccessibilityModel;

@{
    var applicationId = this.GetApplicationIdFromRoute();
    var homeTypeId = this.GetHomeTypeIdFromRoute();
    var workflow = Context.Request.Query["workflow"];
}

<gds-div-grid-column-two-thirds>
    <form asp-controller="HomeTypes" asp-action="AccessibilityCategory" asp-method="post" asp-route-workflow="@workflow" novalidate>
        @Html.HiddenFor(m => Model.ApplicationName)
        @Html.HiddenFor(m => Model.HomeTypeName)
        <vc:home-type-form-header current-page="@HomeTypesWorkflowState.AccessibilityCategory"
                                  application-id="@applicationId"
                                  home-type-id="@homeTypeId"
                                  caption="@Model.Header" />
        <gds-field-set>
            <he-error-form-group asp-for="AccessibilityCategory">
                <gds-legend>
                    <gds-h1 class="govuk-!-margin-bottom-2">Which accessibility categories do the homes meet?</gds-h1>
                </gds-legend>
                <details class="govuk-details govuk-!-margin-bottom-2" data-module="govuk-details">
                    <summary class="govuk-details__summary">
                        <span class="govuk-details__summary-text">
                            What are the accessibility categories?
                        </span>
                    </summary>
                    <div class="govuk-details__text">
                        The Building Regulations Part M cover the accessibility of homes.
                        <a class="govuk-link" target="_blank"
                           href="https://assets.publishing.service.gov.uk/government/uploads/system/uploads/attachment_data/file/540330/BR_PDF_AD_M1_2015_with_2016_amendments_V3.pdf">
                            Read the Building Regulations to find out more (opens in the new tab).
                        </a>
                    </div>
                </details>
                <gds-radio govuk-formgroup-asp-for="AccessibilityCategory"
                           asp-hiddenlabeltext="Accessibility Category"
                           value="@Model.AccessibilityCategory"
                           asp-selectlistitems="@HomeTypesFormOptions.AccessibilityCategoryType"
                           class="govuk-!-margin-bottom-2">
                </gds-radio>
            </he-error-form-group>
            <button class="govuk-button" data-module="govuk-button" name="action" type="submit" value="Continue" id="continue-button">
                Save and continue
            </button>

        </gds-field-set>
        <vc:return-to-application-link application-id="@applicationId" />
    </form>
</gds-div-grid-column-two-thirds>
