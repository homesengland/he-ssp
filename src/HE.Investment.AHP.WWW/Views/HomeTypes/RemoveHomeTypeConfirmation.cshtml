@using HE.Investment.AHP.WWW.Extensions
@using HE.Investment.AHP.Domain.HomeTypes
@model HE.Investment.AHP.WWW.Models.HomeTypes.RemoveHomeTypeBasicModel;

@{
    var applicationId = this.GetApplicationIdFromRoute();
    var homeTypeId = this.GetHomeTypeIdFromRoute();
}

<div class="govuk-grid-column-three-quarters">
    <form asp-controller="HomeTypes" asp-action="Remove" asp-method="post" novalidate>
        <vc:home-type-form-header title="Remove @Model.HomeTypeName Home type"
                                  current-page="@HomeTypesWorkflowState.RemoveHomeType"
                                  application-id="@applicationId"
                                  home-type-id="@homeTypeId"
                                  caption="@Model.Header"/>
        <gds-p>
            Are you sure you want to remove this Home Type?
        </gds-p>

        <button class="govuk-button govuk-button--warning" data-module="govuk-button" name="action" type="submit">
            Remove Home Type
        </button>
    </form>

    <a href="@Url.RouteUrl("section", new { controller = "HomeTypes", action = "List", applicationId })">
        Go back to Home Types
    </a>
</div>
