@using HE.Investment.AHP.Domain.HomeTypes
@using HE.Investment.AHP.WWW.Extensions
@using HE.Investment.AHP.WWW.Models.HomeTypes
@using HE.Investments.Common.Gds
@model HE.Investment.AHP.WWW.Models.HomeTypes.HomeTypeDetailsModel;

@{
    var applicationId = this.GetApplicationIdFromRoute();
    var homeTypeId = this.GetHomeTypeIdFromRoute();
    var action = homeTypeId == null ? "NewHomeTypeDetails" : "HomeTypeDetails";
}

<div class="govuk-grid-column-full">
    <form asp-controller="HomeTypes" asp-action="@action" asp-method="post" novalidate>
        <gds-back-link href="@Url.Action("Back","HomeTypes", new { applicationId, currentPage = HomeTypesWorkflowState.HomeTypeDetails})" text="Back" class="govuk-!-margin-bottom-8"></gds-back-link>

        @await Html.PartialAsync("~/Partials/Errors/_ErrorSummaryPartial.cshtml")

        <gds-div-hint>@Model.ApplicationName</gds-div-hint>
        <gds-h1 size="ControlSize.L">
            Home type details
        </gds-h1>

        <gds-div-hint class="govuk-!-margin-bottom-6">Create a home type for each identical type of property. If there are any differences, create a new home type.</gds-div-hint>

        <gds-div-grid-column-two-thirds class="govuk-!-padding-left-0">
            <gds-field-set>
                <gds-legend class="govuk-!-margin-bottom-0">
                    <gds-h2 class="govuk-!-margin-bottom-0">Home type name</gds-h2>
                </gds-legend>
                <gds-input
                    asp-hiddenlabeltext="Home type name"
                    asp-labelclass="govuk-label"
                    asp-hinttext="Enter a unique name that will help you identify these homes in this application."
                    govuk-formgroup-asp-for="HomeTypeName"
                    name="HomeTypeName"
                    value=@Model.HomeTypeName/>

                <gds-legend>
                    <gds-h2 class="govuk-!-margin-bottom-0">What type of homes are you delivering?</gds-h2>
                </gds-legend>
                <gds-custom-radio
                    asp-for="HousingType"
                    value="@Model.HousingType"
                    radio-items="HomeTypesFormOptions.HousingTypes"
                    class="govuk-!-margin-bottom-8">
                </gds-custom-radio>

                <button class="govuk-button" data-module="govuk-button" name="action" type="submit" value="Continue" id="continue-button">
                    Save and continue
                </button>

            </gds-field-set>

            <vc:return-to-application-link application-id="@applicationId"/>
        </gds-div-grid-column-two-thirds>
    </form>
</div>
