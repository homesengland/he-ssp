@using HE.Investment.AHP.Domain.HomeTypes
@using HE.Investment.AHP.WWW.Extensions
@model HE.Investment.AHP.WWW.Models.HomeTypes.MoreInformationModel;

@{
    var applicationId = this.GetApplicationIdFromRoute();
    var homeTypeId = this.GetHomeTypeIdFromRoute();
    var workflow = Context.Request.Query["workflow"];
}

<gds-div-grid-column-two-thirds>
    <form asp-controller="HomeTypes" asp-action="MoveOnArrangements" asp-method="post" asp-route-workflow="@workflow" novalidate>
        @Html.HiddenFor(m => Model.ApplicationName)
        @Html.HiddenFor(m => Model.HomeTypeName)
        <vc:home-type-form-header current-page="@HomeTypesWorkflowState.MoveOnArrangements"
                                  application-id="@applicationId"
                                  home-type-id="@homeTypeId"
                                  caption="@Model.Header"/>

        <gds-field-set class="govuk-!-margin-bottom-4">
            <he-error-form-group asp-for="MoreInformation">
                <gds-h1 class="govuk-heading-xl">
                    Tell us the move on arrangements that are in place for when these homes are used as short stay accommodation
                </gds-h1>
                <vc:form-hidden-label
                    field-name="MoreInformation"
                    title="More information"/>
                <he-text-area asp-for="MoreInformation" rows="7" class="govuk-!-margin-bottom-1"></he-text-area>
                <gds-span-hint>You can enter up to 1500 characters</gds-span-hint>
            </he-error-form-group>
        </gds-field-set>

        <button class="govuk-button" data-module="govuk-button" name="action" type="submit" value="Continue" id="continue-button">
            Save and continue
        </button>
        <br/>

        <vc:return-to-application-link application-id="@applicationId"/>
    </form>
</gds-div-grid-column-two-thirds>
