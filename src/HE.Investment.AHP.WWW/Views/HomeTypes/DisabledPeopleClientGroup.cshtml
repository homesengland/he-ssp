@using HE.Investment.AHP.WWW.Extensions
@using HE.Investment.AHP.WWW.Models.HomeTypes
@using HE.Investment.AHP.WWW.Views.HomeTypes.Const
@using HE.Investment.AHP.Contract.HomeTypes
@model HE.Investment.AHP.WWW.Models.HomeTypes.DisabledPeopleClientGroupModel;

@{
    var applicationId = this.GetApplicationIdFromRoute();
    var workflow = Context.Request.Query["workflow"];
    ViewData["Title"] = HomeTypesPageTitles.DisabledPeopleClientGroup;
}

<div class="govuk-grid-column-two-thirds">
    <he-organisation-form asp-controller="HomeTypes" asp-action="DisabledPeopleClientGroup" asp-method="post" asp-route-workflow="@workflow" novalidate>
        @Html.HiddenFor(m => Model.ApplicationName)
        @Html.HiddenFor(m => Model.HomeTypeName)
        <vc:home-type-form-header title="@HomeTypesPageTitles.DisabledPeopleClientGroup"
                                  current-page="@HomeTypesWorkflowState.DisabledPeopleClientGroup"
                                  caption="@Model.Header" />

            <he-error-form-group asp-for="DisabledPeopleClientGroup">
                <gds-legend class="govuk-!-margin-bottom-6">
                    If the homes will be housing people from different groups, select the priority client group. You can also create another home type for each group and enter them separately.
                </gds-legend>

                <gds-radio govuk-formgroup-asp-for="DisabledPeopleClientGroup"
                           asp-hiddenlabeltext="What client group are the homes for?"
                           value="@Model.DisabledPeopleClientGroup"
                           asp-selectlistitems="@HomeTypesFormOptions.DisabledPeopleClientGroupTypes">
                </gds-radio>
            </he-error-form-group>
            <vc:form-button/>
        <vc:return-to-application-link application-id="@applicationId" />
    </he-organisation-form>
</div>
