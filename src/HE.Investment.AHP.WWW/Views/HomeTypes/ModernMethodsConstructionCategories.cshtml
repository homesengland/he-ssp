@using HE.Investment.AHP.Domain.HomeTypes
@using HE.Investment.AHP.WWW.Extensions
@using HE.Investment.AHP.WWW.Models.HomeTypes
@using HE.Investment.AHP.WWW.Views.HomeTypes.Const
@using HE.Investment.AHP.WWW.Views.Shared.Components.FormHiddenLabel
@using HE.Investment.AHP.WWW.Views.Shared.Components.HomeTypeFormHeader
@using HE.Investment.AHP.WWW.Views.Shared.Components.ReturnToApplicationLink
@using HE.Investments.Common.WWW.Components.FormButton
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using He.AspNetCore.Mvc.Gds.Components.TagHelpers.Checkboxes
@model HE.Investment.AHP.WWW.Models.HomeTypes.ModernMethodsConstructionModel;

@{
    var applicationId = this.GetApplicationIdFromRoute();
    var homeTypeId = this.GetHomeTypeIdFromRoute();
    var workflow = Context.Request.Query["workflow"];
    ViewData["Title"] = HomeTypesPageTitles.ModernMethodsConstructionCategories;
}

<gds-div-grid-column-two-thirds>
    <form asp-controller="HomeTypes" asp-action="ModernMethodsConstructionCategories" asp-method="post" asp-route-workflow="@workflow" novalidate>
        @Html.HiddenFor(m => Model.ApplicationName)
        @Html.HiddenFor(m => Model.HomeTypeName)
        <vc:home-type-form-header current-page="@HomeTypesWorkflowState.ModernMethodsConstructionCategories"
                                  application-id="@applicationId"
                                  home-type-id="@homeTypeId"
                                  caption="@Model.Header"
                                  title="@HomeTypesPageTitles.ModernMethodsConstructionCategories"/>

        <gds-field-set class="govuk-!-margin-bottom-6">
            <span class="govuk-caption-m govuk-!-margin-bottom-6">Select all that apply.</span>
            <vc:form-hidden-label
                field-name="ModernMethodsConstructionCategories"
                title="Modern Methods Construction Categories"/>
            <gds-checkbox class="exclusive-checkbox-group"
                          govuk-formgroup-asp-for="@Model.ModernMethodsConstructionCategories"
                          asp-selectlistitems="HomeTypesFormOptions.ModernMethodsConstructionCategoriesTypes"
                          asp-for="@Model.ModernMethodsConstructionCategories"
                          asp-excludelabel>
            </gds-checkbox>
        </gds-field-set>

        <vc:form-button/>
        <br/>

        <vc:return-to-application-link application-id="@applicationId"/>
    </form>
</gds-div-grid-column-two-thirds>
