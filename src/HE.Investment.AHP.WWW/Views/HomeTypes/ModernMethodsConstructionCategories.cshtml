@using HE.Investment.AHP.WWW.Extensions
@using HE.Investment.AHP.WWW.Views.HomeTypes.Const
@using HE.Investment.AHP.WWW.Views.Shared.Components.HomeTypeFormHeader
@using HE.Investment.AHP.WWW.Views.Shared.Components.ReturnToApplicationLink
@using HE.Investments.Common.WWW.Components.FormButton
@using HE.Investment.AHP.Contract.HomeTypes
@using HE.Investment.AHP.Contract.HomeTypes.Enums
@using HE.Investments.Common.WWW.Components.CheckboxList
@using Microsoft.AspNetCore.Mvc.TagHelpers

@using HE.Investments.Common.WWW.Helpers
@model HE.Investment.AHP.WWW.Models.HomeTypes.ModernMethodsConstructionModel;

@{
    var applicationId = this.GetApplicationIdFromRoute();
    var workflow = Context.Request.Query["workflow"];
    ViewData["Title"] = HomeTypesPageTitles.ModernMethodsConstructionCategories;
}

<gds-div-grid-column-two-thirds>
    <he-organisation-form asp-controller="HomeTypes" asp-action="ModernMethodsConstructionCategories" asp-method="post" asp-route-workflow="@workflow" novalidate>
        @Html.HiddenFor(m => Model.ApplicationName)
        @Html.HiddenFor(m => Model.HomeTypeName)
        <vc:home-type-form-header current-page="@HomeTypesWorkflowState.ModernMethodsConstructionCategories"
                                  caption="@Model.Header"/>

        <vc:checkbox-list
            title="@HomeTypesPageTitles.ModernMethodsConstructionCategories"
            title-type="InputTitleType.PageHeader"
            hint="Select all that apply."
            field-name="@nameof(Model.ModernMethodsConstructionCategories)"
            available-options="@SelectListHelper.FromEnumToExtendedList<ModernMethodsConstructionCategoriesType>()"
            selected-values="@Model.ModernMethodsConstructionCategories?.Cast<Enum>()"/>

        <vc:form-button/>
        <br/>

        <vc:return-to-application-link application-id="@applicationId"/>
    </he-organisation-form>
</gds-div-grid-column-two-thirds>
