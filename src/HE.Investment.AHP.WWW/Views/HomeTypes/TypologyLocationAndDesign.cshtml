@using HE.Investment.AHP.WWW.Extensions;
@using HE.Investment.AHP.WWW.Views.HomeTypes.Const
@using HE.Investment.AHP.Contract.HomeTypes
@using HE.Investments.Common.WWW.Components.InputHeader
@model HE.Investment.AHP.WWW.Models.HomeTypes.MoreInformationModel;

@{
    var applicationId = this.GetApplicationIdFromRoute();
    var workflow = Context.Request.Query["workflow"];
    ViewData["Title"] = HomeTypesPageTitles.TypologyLocationAndDesign;
}

<gds-div-grid-column-two-thirds>
    <form asp-controller="HomeTypes" asp-action="TypologyLocationAndDesign" asp-method="post" asp-route-workflow="@workflow" novalidate>
        @Html.HiddenFor(m => Model.ApplicationName)
        @Html.HiddenFor(m => Model.HomeTypeName)
        <vc:home-type-form-header current-page="@HomeTypesWorkflowState.TypologyLocationAndDesign"
                                  caption="@Model.Header"/>

        <vc:text-area-input-with-counter
            field-name="@nameof(Model.MoreInformation)"
            title="@HomeTypesPageTitles.TypologyLocationAndDesign"
            title-type="InputTitleType.PageHeader"
            hint="Typology is the classification and characteristics of the homes you are building."
            value="@Model.MoreInformation"/>

        <vc:form-button/>
        <br/>
        <vc:return-to-application-link application-id="@applicationId"/>
    </form>
</gds-div-grid-column-two-thirds>
