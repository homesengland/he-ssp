@using He.AspNetCore.Mvc.Gds.Components.TagHelpers.Headings
@model (string EmailAddress, string PhoneNumber)

<div class="govuk-body-s">
    <hr class="separator"/>
    <gds-h3 class="govuk-heading-s">
        Get help
    </gds-h3>
    <strong class="govuk-!-display-block">
        Email
    </strong>
    <a href="mailto:@Model.EmailAddress">@Model.EmailAddress</a>
    <br/>
    <strong class="govuk-!-display-block govuk-!-margin-top-4">
        Telephone
    </strong>
    <span class="govuk-!-display-block">@Model.PhoneNumber</span>
    <span class="govuk-!-display-block">Monday to Friday 8:30am to 5:30pm</span>
    <span class="govuk-!-display-block">(except public holidays)</span>
    <span class="govuk-!-display-block">Free of charge</span>
</div>
