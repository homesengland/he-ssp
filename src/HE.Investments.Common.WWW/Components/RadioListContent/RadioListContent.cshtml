@using HE.Investments.Common.WWW.Models
@using HE.Investments.Common.WWW.TagHelpers
@model (string fieldName, IList<ExtendedSelectListItem> availableOptions)

@foreach (var option in Model.availableOptions)
{
    var id = option == Model.availableOptions[0] ? Model.fieldName : $"{Model.fieldName}-{option.Value}";
    <div class="govuk-radios__item">
        @Html.RadioButton(Model.fieldName, option.Value, option.Selected, new { id, @class = "govuk-radios__input" })
        <label class="govuk-label govuk-radios__label" for="@id">
            @option.Text
        </label>
        @if (!string.IsNullOrWhiteSpace(option.Hint))
        {
            <he-div-hint class="govuk-!-padding-left-3">
                @option.Hint
            </he-div-hint>
        }
    </div>
}
