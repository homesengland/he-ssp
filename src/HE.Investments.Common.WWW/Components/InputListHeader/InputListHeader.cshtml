@using HE.Investments.Common.WWW.Components

@model (string title, InputTitleType titleType, DynamicComponentViewModel additionalContent,  string hint)

<gds-legend>

    @if (!string.IsNullOrWhiteSpace(Model.title))
    {
        @if (Model.titleType == InputTitleType.PageHeader)
        {
            <gds-h1>
                @Model.title
            </gds-h1>
        }
        else if (Model.titleType == InputTitleType.InputTitle)
        {
            <gds-h2>
                @Model.title
            </gds-h2>
        }
        else
        {
            <gds-p>@Model.title</gds-p>
        }
    }

    @* ReSharper disable once ConditionIsAlwaysTrueOrFalseAccordingToNullableAPIContract *@
    @if (Model.additionalContent != null)
    {
        <vc:dynamic-component
            component="@Model.additionalContent"/>
    }

    @if (!string.IsNullOrWhiteSpace(Model.hint))
    {
        <he-div-hint>
            @Model.hint
        </he-div-hint>
    }
</gds-legend>
