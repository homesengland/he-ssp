@using HE.Investments.Common.WWW.Components

@model (DynamicComponentViewModel headerComponent, string header, string title, string hint)

<gds-legend>

    @* ReSharper disable once ConditionIsAlwaysTrueOrFalseAccordingToNullableAPIContract *@
    @if (Model.headerComponent != null)
    {
        <vc:dynamic-component
            component="@Model.headerComponent"/>
    }
    else
    {
        @if (!string.IsNullOrWhiteSpace(Model.header))
        {
            <gds-h1>
                @Model.header
            </gds-h1>
        }

        @if (!string.IsNullOrWhiteSpace(Model.title))
        {
            <gds-h2>
                @Model.title
            </gds-h2>
        }

        @if (!string.IsNullOrWhiteSpace(Model.hint))
        {
            <he-div-hint>
                @Model.hint
            </he-div-hint>
        }
    }
</gds-legend>
