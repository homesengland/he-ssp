@using HE.Investments.Common.WWW.Components

@model (string Title, InputTitleType TitleType, DynamicComponentViewModel AdditionalContent,  string Hint, string Paragraph)

<gds-legend>

    @if (!string.IsNullOrWhiteSpace(Model.Title))
    {
        @if (Model.TitleType == InputTitleType.PageHeader)
        {
            <gds-h1>
                @Model.Title
            </gds-h1>
        }
        else if (Model.TitleType == InputTitleType.InputTitle)
        {
            <gds-h2>
                @Model.Title
            </gds-h2>
        }
        else if (Model.TitleType == InputTitleType.SmallInputFieldsetLegend)
        {
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">
                @Model.Title
            </legend>
        }
        else if (Model.TitleType == InputTitleType.InputBoldDescription)
        {
            <strong>
                @Model.Title
            </strong>
        }
        else
        {
            <gds-p>@Model.Title</gds-p>
        }
    }

    @* ReSharper disable once ConditionIsAlwaysTrueOrFalseAccordingToNullableAPIContract *@
    @if (Model.AdditionalContent != null)
    {
        <vc:dynamic-component
            component="@Model.AdditionalContent"/>
    }

    @if (!string.IsNullOrWhiteSpace(Model.Hint))
    {
        <he-div-hint>
            @Model.Hint
        </he-div-hint>
    }

    @if (!string.IsNullOrWhiteSpace(Model.Paragraph))
    {
    <gds-p>
        @Model.Paragraph
    </gds-p>
    }
</gds-legend>
