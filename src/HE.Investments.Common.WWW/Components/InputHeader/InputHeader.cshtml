@using HE.Investments.Common.WWW.Components

@model (string fieldName, string title, HE.Investments.Common.WWW.Components.InputTitleType titleType, string hint, string paragraph, DynamicComponentViewModel additionalContent)

@{
    var cssClass = Model.titleType switch
    {
        InputTitleType.PageHeader => "govuk-heading-l",
        InputTitleType.InputTitle => "govuk-label govuk-label--m",
        InputTitleType.InputDescription => "govuk-label",
        _ => string.Empty,
        };
}

@if (!string.IsNullOrWhiteSpace(Model.title))
{
    <h1 class="govuk-label-wrapper">
        <label class="@cssClass" for="@Model.fieldName">
            @Model.title
        </label>
    </h1>
}

@* ReSharper disable once ConditionIsAlwaysTrueOrFalseAccordingToNullableAPIContract *@
@if (Model.additionalContent != null)
{
<vc:dynamic-component
    component="@Model.additionalContent"/>
}

@if (!string.IsNullOrWhiteSpace(Model.paragraph))
{
    foreach (var line in Model.paragraph.Split(Environment.NewLine))
    {
        <gds-p>@line</gds-p>
    }
}

@if (!string.IsNullOrWhiteSpace(Model.hint))
{
    <he-div-hint>
        @Model.hint
    </he-div-hint>
}
