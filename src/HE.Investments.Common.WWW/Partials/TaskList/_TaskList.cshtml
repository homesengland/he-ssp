@model IList<HE.Investments.Common.WWW.Models.TaskList.TaskListSectionModel>
<ul class="app-task-list">
    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];
        <li>
            <h2 class="app-task-list__section">
                <span class="govuk-prototype-kit-task-list__section-number">@(i + 1). </span> @item.Header
            </h2>
            <gds-div-hint>@item.Description</gds-div-hint>
            <ul class="app-task-list__items">
                <li class="app-task-list__item">
                    <span class="app-task-list__task-name">
                        @if (!item.IsAvailable)
                        {
                            <span>@item.Action</span>
                        }
                        else
                        {
                            <a href=@item.ActionUrl>
                                @item.Action
                            </a>
                        }
                    </span>
                    <tag classes="app-task-list__tag" colour="@item.TagColour">@item.Status</tag>
                </li>
            </ul>
        </li>
    }
</ul>
