@using HE.Investments.Common.WWW.Components.FormButton
@using HE.Investments.FrontDoor.Contract.Site
@using HE.Investments.FrontDoor.WWW.Views.Shared.Components.FrontDoorWorkflowBackButton
@using HE.Investments.FrontDoor.WWW.Views.Site.Const
@model SiteDetails
@{
    var title = SitePageTitles.HomesNumber;
    ViewData["Title"] = title;
}

<gds-div-grid-column-two-thirds>
    <vc:front-door-workflow-back-button current-page="@SiteWorkflowState.HomesNumber"></vc:front-door-workflow-back-button>

    @await Html.PartialAsync("~/Partials/Errors/_ErrorSummaryPartial.cshtml")

    <vc:page-header caption="@ViewBag.ProjectName"/>

    <form asp-controller="Site" asp-action="HomesNumber" asp-route-workflow="@Context.Request.Query["workflow"]" asp-method="post" novalidate>

        <vc:numeric-text-input
            field-name=@nameof(Model.HomesNumber)
            value="@Model.HomesNumber"
            title-type="InputTitleType.PageHeader"
            label="@title"
            css-class="govuk-input--width-3"/>

        <vc:form-button/>
        <vc:return-to-account-link/>
    </form>
</gds-div-grid-column-two-thirds>
