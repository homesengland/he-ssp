@using HE.Investments.Common.WWW.Components.FormButton
@using HE.Investments.Common.WWW.Components.RadioList
@using HE.Investments.Common.WWW.Helpers
@using HE.Investments.FrontDoor.Contract.Site
@using HE.Investments.FrontDoor.WWW.Views.Shared.Components.FrontDoorWorkflowBackButton
@using HE.Investments.FrontDoor.WWW.Views.Shared.Components.ReturnToAccountLink
@using HE.Investments.FrontDoor.WWW.Views.Site.Const
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using HE.Investments.Common.Contract.Enum
@model SiteDetails
@{
    var title = SitePageTitles.PlanningStatus;
    ViewData["Title"] = title;
}

<gds-div-grid-column-two-thirds>
    <vc:front-door-workflow-back-button current-page="@SiteWorkflowState.PlanningStatus"></vc:front-door-workflow-back-button>

    @await Html.PartialAsync("~/Partials/Errors/_ErrorSummaryPartial.cshtml")

    <vc:page-header caption="@ViewBag.ProjectName" />

    <form asp-controller="Site" asp-action="PlanningStatus" asp-route-workflow="@Context.Request.Query["workflow"]" asp-route-redirect="@Context.Request.Query["redirect"]" asp-route-optional="@Context.Request.Query["optional"]" asp-method="post" novalidate>

        <vc:radio-list
            title="@SitePageTitles.PlanningStatus"
            title-type="InputTitleType.PageHeader"
            field-name="@nameof(Model.PlanningStatus)"
            available-options="@SelectListHelper.FromEnumToExtendedList<SitePlanningStatus>()"
            value=@Model.PlanningStatus/>

        <vc:form-button/>
        <vc:return-to-account-link/>
    </form>
</gds-div-grid-column-two-thirds>
