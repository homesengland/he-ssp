@using HE.Investments.Common.WWW.Components.FormButton
@using HE.Investments.FrontDoor.Contract.Site
@using HE.Investments.FrontDoor.WWW.Views.Shared.Components.FrontDoorWorkflowBackButton
@using HE.Investments.FrontDoor.WWW.Views.Site.Const
@{
    ViewData["Title"] = SitePageTitles.LocalAuthoritySearch;
}

<gds-div-grid-column-two-thirds>
    <vc:front-door-workflow-back-button current-page="@SiteWorkflowState.LocalAuthoritySearch"></vc:front-door-workflow-back-button>
    @await Html.PartialAsync("~/Partials/Errors/_ErrorSummaryPartial.cshtml")

    <vc:page-header caption="@ViewBag.ProjectName" />

    <form asp-controller="Site" asp-action="LocalAuthoritySearch" asp-route-workflow="@Context.Request.Query["workflow"]" asp-method="post" novalidate>

        <vc:text-input
            field-name="Phrase"
            title="@SitePageTitles.LocalAuthoritySearch"
            title-type="InputTitleType.PageHeader"
            paragraph="If your project is located in more than one local authority, enter the local authority where the largest part of the project is located. Enter all or part of your local authority name."
            hint="Enter all or part of your local authority name."/>

        <vc:form-button/>
    </form>
</gds-div-grid-column-two-thirds>
