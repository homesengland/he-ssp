@using HE.Investments.Loans.WWW.Views.Project.Consts
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using He.AspNetCore.Mvc.Gds.Components.TagHelpers.Divs
@using He.AspNetCore.Mvc.Gds.Components.TagHelpers.Headings
@using He.AspNetCore.Mvc.Gds.Components.TagHelpers.Links
@using He.AspNetCore.Mvc.Gds.Components.TagHelpers.Lists
@using He.AspNetCore.Mvc.Gds.Components.TagHelpers.Paragraphs
@model HE.Investments.Loans.WWW.Models.ProjectStartModel;

<gds-div-grid-column-two-thirds>
    <form asp-controller="Project" asp-action="StartProjectPost" asp-route-id="@Model.LoanApplicationId" asp-route-projectId="@Model.ProjectId" asp-method="post" novalidate>
        <gds-back-link href="@Url.Action("TaskList", "LoanApplicationV2", new { id = Model.LoanApplicationId })" text="Back to application" class="govuk-!-margin-bottom-8">
        </gds-back-link>

        <gds-h1 class="govuk-heading-xl">
            @ProjectPageTitles.StartPage
        </gds-h1>

        <gds-p>Tell us about your project or projects. You can add more than one project in this application.</gds-p>

        <div class="govuk-!-padding-bottom-8">
            <gds-p>In this section, tell us about:</gds-p>
            <gds-ul>
                <gds-li>project name, type and address</gds-li>
                <gds-li>amount and type of homes you are building</gds-li>
                <gds-li>planning permission</gds-li>
                <gds-li>ownership of the land</gds-li>
                <gds-li>public sector grant funding the land has received</gds-li>
                <gds-li>legal charges or debt on the land</gds-li>
                <gds-li>affordable homes the project will deliver</gds-li>
            </gds-ul>
        </div>

        <button id="start-now-button" class="govuk-button govuk-button--start" data-module="govuk-button" name="action" type="submit" value="Continue">
            Start now
            <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"/>
            </svg>
        </button>
    </form>
</gds-div-grid-column-two-thirds>
