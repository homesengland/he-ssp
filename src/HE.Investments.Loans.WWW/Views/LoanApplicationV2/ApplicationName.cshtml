@using HE.Investments.Common.Gds
@using HE.Investments.Loans.BusinessLogic.LoanApplication
@model HE.Investments.Loans.WWW.Models.ApplicationNameModel;
@{
    var fdProjectId = Context.Request.Query["fdProjectId"];
}

<gds-div-grid-column-two-thirds>
    <he-organisation-form asp-controller="LoanApplicationV2" asp-action="ApplicationNamePost" asp-method="post" asp-route-fdProjectId="@fdProjectId" novalidate>
        <vc:loans-workflow-back-button current-page="@LoanApplicationWorkflow.State.ApplicationName"/>

        <partial name="_ErrorSummaryPartial" model="null"/>

        <gds-h1 size="ControlSize.L">
            Name your application
        </gds-h1>

        <div class="govuk-!-padding-bottom-4">
            <gds-p>We will use this to differentiate between applications. 100 character limit. You won't be able to change this later.</gds-p>
        </div>

        <gds-input
            asp-hiddenlabeltext="Application Name"
            class="govuk-input--width-20"
            govuk-formgroup-asp-for="LoanApplicationName"
            name="LoanApplicationName"
            value=@Model.LoanApplicationName />

        <button class="govuk-button" data-module="govuk-button" name="action" type="submit" value="Continue" id="continue-button">
            Continue
        </button>
    </he-organisation-form>
</gds-div-grid-column-two-thirds>
