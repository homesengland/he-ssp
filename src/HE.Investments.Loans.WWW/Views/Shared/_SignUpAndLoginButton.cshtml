@using HE.Investments.Common.Gds
@using He.AspNetCore.Mvc.Gds.Components.TagHelpers.Headings
@using He.AspNetCore.Mvc.Gds.Components.TagHelpers.Paragraphs
@using He.AspNetCore.Mvc.Gds.Components.TagHelpers.Buttons
<gds-h1 size="ControlSize.M">
    Sign in to your account
</gds-h1>

<gds-p>
    Sign in to your Homes England account to view and edit your applications for a development loan.
    If you do not have an account, <a href="@Url.Action("AcceptHeTermsAndConditions", "Home")">you can create one here.</a>
</gds-p>

<a href="@Url.Action("SignIn", "HeIdentity")">
    <gds-button id="SignInButton" data-module="govuk-button" name="action">
        Sign to your account
    </gds-button>
</a>
