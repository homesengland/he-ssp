@using HE.Investments.Common.Gds
@model HE.Investments.Loans.Common.Infrastructure.ErrorHandling.ErrorModel

<gds-column width="ColumnWidth.TwoThirds">
    <gds-h1 class="govuk-!-margin-top-9" size="ControlSize.Xl">
        Page not found
    </gds-h1>

    <gds-p>If you typed the web address, check it is correct.</gds-p>
    <gds-p>If you pasted the web address, check you copied the entire address.</gds-p>
    <gds-p>If the web address is correct or you selected a link or button, contact Homes England Helpline if you need to speak to someone about your loan.</gds-p>
</gds-column>
<gds-column width="ColumnWidth.Full">
    @if (Model != null)
    {
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <gds-h2 size="ControlSize.S">Message:</gds-h2>
            <gds-p>@Model.Message</gds-p>
        }
    }
</gds-column>
