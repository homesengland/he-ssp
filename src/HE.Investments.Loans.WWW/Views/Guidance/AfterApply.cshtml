@using HE.Investments.Common.Gds
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using He.AspNetCore.Mvc.Gds.Components.TagHelpers.Divs
@using He.AspNetCore.Mvc.Gds.Components.TagHelpers.Headings
@using He.AspNetCore.Mvc.Gds.Components.TagHelpers.Links
@using He.AspNetCore.Mvc.Gds.Components.TagHelpers.Paragraphs
@using He.AspNetCore.Mvc.Gds.Components.TagHelpers.Buttons
@using HE.Investments.Common.WWW.Extensions
@{
    ViewData["Title"] = "Guidance";
    ViewData["PreviousLink"] = Url.OrganisationAction("Apply", "Guidance");
    ViewData["PreviousLinkName"] = "Apply";
    ViewData["NextLink"] = Url.OrganisationAction("PrioritiseApplications", "Guidance");
    ViewData["NextLinkName"] = "How we prioritise applications";
}

<gds-div-grid-column-two-thirds>
    <partial name="Guidance/_MainGuidanceNavigation" />

    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">

    <gds-h2 size="ControlSize.L">
        What happens after you apply
    </gds-h2>

    <gds-h3 size="ControlSize.S">
        After application
    </gds-h3>

    <gds-p>After your application, you will be allocated a transaction manager. They will contact you regarding your application.</gds-p>

    <gds-h3 size="ControlSize.S">
        Next stages
    </gds-h3>

    <gds-p>We will ask you to complete a dedicated cashflow for each future project.  </gds-p>

    <gds-p>We will also complete a ‘know your customer’ (KYC) check.</gds-p>

    <gds-p>
        <gds-link href="https://www.gov.uk/government/publications/know-your-customer-guidance/know-your-customer-guidance-accessible-version">
            Read more about the documents we may need to see about you and your company.
        </gds-link>
    </gds-p>

    <div class="govuk-!-margin-top-9">
        <a href="@Url.OrganisationAction("AboutLoan", "LoanApplicationV2")">
            <gds-button-start type="button">
                Apply Online
            </gds-button-start>
        </a>
    </div>

    <partial name="_SignInAndStartButton" />

    @await Html.PartialAsync("Guidance/_PreviousWithLinkName", ViewData)

    @await Html.PartialAsync("Guidance/_NextWithLinkName", ViewData)

</gds-div-grid-column-two-thirds>

<partial name="Guidance/_AsideRelatedContentSection" />
