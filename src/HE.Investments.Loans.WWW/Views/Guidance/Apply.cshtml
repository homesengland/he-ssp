@using HE.Investments.Common.Gds
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using He.AspNetCore.Mvc.Gds.Components.TagHelpers.Divs
@using He.AspNetCore.Mvc.Gds.Components.TagHelpers.Headings
@using He.AspNetCore.Mvc.Gds.Components.TagHelpers.Lists
@using He.AspNetCore.Mvc.Gds.Components.TagHelpers.Paragraphs
@using He.AspNetCore.Mvc.Gds.Components.TagHelpers.Buttons
@using HE.Investments.Common.WWW.Extensions
@{
    ViewData["Title"] = "Guidance";
    ViewData["PreviousLink"] = Url.OrganisationAction("Eligibility", "Guidance");
    ViewData["PreviousLinkName"] = "Eligibility";
    ViewData["NextLink"] = Url.OrganisationAction("AfterApply", "Guidance");
    ViewData["NextLinkName"] = "What happens after you apply";
}

<gds-div-grid-column-two-thirds>
    <partial name="Guidance/_MainGuidanceNavigation" />

    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">

    <gds-h2 size="ControlSize.L">
        Apply
    </gds-h2>

    <gds-h3 size="ControlSize.S">
        How to apply
    </gds-h3>

    <gds-p>You will need to complete an application once you have successfully confirmed eligibility.</gds-p>

    <gds-p>By applying online, you will first create an account. Once your account has been created and verified, you will begin your application.
        If you already have an account, log in to start an application.</gds-p>

    <gds-p class="govuk-!-margin-bottom-1">During your application, we will ask you about your:</gds-p>
    <ol class="govuk-list govuk-list--number">
        <gds-li>Company structure and experience.</gds-li>
        <gds-li>Funding and security details.</gds-li>
        <gds-li>Project details.</gds-li>
    </ol>

    <gds-p>It may take us up to 10 working days to review your application and contact you regarding our decision. </gds-p>

    <div class="govuk-!-margin-top-8">
        <a href="@Url.OrganisationAction("AcceptHeTermsAndConditions", "Home")" id="apply-link" >
            <gds-button-start type="button">
                Apply Online
            </gds-button-start>
        </a>
    </div>

    <partial name="_SignInAndStartButton" />

    @await Html.PartialAsync("Guidance/_PreviousWithLinkName", ViewData)

    @await Html.PartialAsync("Guidance/_NextWithLinkName", ViewData)

</gds-div-grid-column-two-thirds>

<partial name="Guidance/_AsideRelatedContentSection" />
