@model HE.InvestmentLoans.Common.Models.Others.ErrorModel

<gds-column width="ColumnWidth.TwoThirds">
    <gds-h1 class="govuk-!-margin-top-9" size="ControlSize.Xl">
        Sorry, there is a problem with the service
    </gds-h1>

    <gds-p>Try again later.</gds-p>
    <gds-p>We saved your answers. They will be available for 30 days.</gds-p>
    <gds-p>Contact the Tax Credits Helpline if you need to make changes to your claim or speak to someone about your tax credits.</gds-p>
</gds-column>
<gds-column width="ColumnWidth.Full">
    @if (Model != null)
    {
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <gds-h2 size="ControlSize.S">Message:</gds-h2>
            <gds-p>@Model.Message</gds-p>
        }
        @if (!string.IsNullOrEmpty(Model.StackTrace))
        {
            <gds-h2 size="ControlSize.S">StackTrace:</gds-h2>
            <gds-p>@Model.StackTrace</gds-p>
        }
    }
</gds-column>
