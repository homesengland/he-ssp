@using HE.InvestmentLoans.WWW.Utils.Errors;
@using HE.Investments.Common.Gds
@model HE.InvestmentLoans.Common.Infrastructure.ErrorHandling.ErrorModel;

@{
    var (header, body) = ErrorContentProvider.GetContent(Model);
}

<gds-column width="ColumnWidth.TwoThirds">
    @if (header != null)
    {
        <gds-h1 class="govuk-!-margin-top-9" size="ControlSize.Xl">
            @header
        </gds-h1>
    }
    else
    {
        <gds-h1 class="govuk-!-margin-top-9" size="ControlSize.Xl">
            Sorry, there is a problem with the service
        </gds-h1>
    }

    @if (body != null)
    {
        <gds-p>@body</gds-p>
    }
    else
    {
        <gds-p>Try again later.</gds-p>
        <gds-p>Contact Homes England Helpline if you need to make changes to your claim or speak to someone about your loan.</gds-p>
    }
</gds-column>
<gds-column width="ColumnWidth.Full">
    @if (Model != null)
    {
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <gds-h2 size="ControlSize.S">Message:</gds-h2>
            <gds-p>@Model.Message</gds-p>
        }
    }
</gds-column>
