@using System.Text;

@model ConditionalModel

@{
    var radioConditionalInputPairs = Model.Radios;
}

@foreach (var (radioId, conditionalId) in radioConditionalInputPairs)
{
    @Html.Hidden("radio", Json.Serialize(new { radioId, conditionalId}));
}

<script src="/javascripts/radios-with-conditional-input.js"></script>
