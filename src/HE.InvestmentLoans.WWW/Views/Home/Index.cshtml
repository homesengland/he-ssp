@model HE.InvestmentLoans.CRM.Model.Account
@{
    ViewData["Title"] = "Home Page";
}

<gds-div-grid-column-two-thirds>
    @if (User.Identity.IsAuthenticated)
    {
        <form asp-route="/" asp-method="post" novalidate>

            <gds-h1 class="govuk-!-margin-top-9" size="ControlSize.Xl">
                Dashboard
            </gds-h1>

            <div>
                <a href="/application">
                    <gds-button-start type="button">
                        Start application
                    </gds-button-start>
                </a>
            </div>
            <div>
                <a href="@Url.Action("Dashboard","Home")">
                    <gds-button-start type="button">
                        Go to dashboard
                    </gds-button-start>
                </a>
            </div>
        </form>
    }
    else
    {
        <gds-h1 class="govuk-!-margin-top-9" size="ControlSize.Xl">
            Home page
        </gds-h1>
    }

</gds-div-grid-column-two-thirds>
