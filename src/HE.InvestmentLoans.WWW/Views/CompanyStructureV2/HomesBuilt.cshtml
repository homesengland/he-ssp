@using HE.InvestmentLoans.Contract.CompanyStructure
@using HE.Investments.Common.Gds
@model HE.InvestmentLoans.Contract.CompanyStructure.CompanyStructureViewModel

<gds-div-grid-column-two-thirds>
    <form asp-controller="CompanyStructureV2" asp-action="HowManyHomesBuiltPost" asp-route-id="@Model.LoanApplicationId" asp-method="post" novalidate>
        <gds-back-link href="@Url.Action("Back", "CompanyStructureV2", new { id = Model.LoanApplicationId, currentPage = CompanyStructureState.HomesBuilt })" text="Back" class="govuk-!-margin-bottom-8">
        </gds-back-link>
        @await Html.PartialAsync("_Notification")
        <partial name="_ErrorSummaryPartial" model="null"/>

        @Html.HiddenFor(x => x.LoanApplicationId)

        <gds-label-wrapper>
            <gds-label size="@ControlSize.L" for="HomesBuilt">
                How many homes in the past three years has your organisation built?
            </gds-label>
        </gds-label-wrapper>
        <gds-div-hint>
            Enter the number of homes your organisation or any director has built in the past three years or the nearest estimate. Entering 0 will not affect your application.
        </gds-div-hint>

        <div>
            <gds-input govuk-formgroup-asp-for="HomesBuilt" asp-excludelabel type="text" class="govuk-input--width-5 govuk-!-margin-bottom-6"
                       value="@Model.HomesBuilt"/>
        </div>

        <button class="govuk-button" data-module="govuk-button" name="action" type="submit" value="@(Model.StateChanged ? "Change" : "Continue")" id="continue-button">
            Continue
        </button>
    </form>

    <partial name="_HomeAndCheckAnswersLinks"/>
</gds-div-grid-column-two-thirds>
