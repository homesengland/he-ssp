@model HE.InvestmentLoans.Contract.Projects.ViewModels.ProjectViewModel;
@{
    var id = ViewContext.RouteData.Values["id"];

    var (inputInvalid, inputErrors) = @ViewData.ModelState.GetErrors(nameof(HE.InvestmentLoans.BusinessLogic.ViewModel.SiteViewModel.Name));
}

<gds-div-grid-column-two-thirds>
    <gds-back-link href="@Url.Action("GoBack","Site", new {site=Model.Id, id = id })" text="Back" class="govuk-!-margin-bottom-8">
    </gds-back-link>
    <partial name="_ErrorSummaryPartial" model="null" />
    <form asp-controller="Project" asp-action="ProjectName" asp-route-id="@Model.Id" asp-method="post" novalidate>
            <gds-h1 size="@ControlSize.L">
                    @ProjectPageTitles.Name
            </gds-h1>
            <gds-div-form-group invalid="inputInvalid">
                
                <label for="Name" class="govuk-label--m">What is the project name?</label>

                <gds-div-hint>
                    We will use this name to differentiate between projects if you have added more than one as part of this application.
                </gds-div-hint>

                <gds-input-wrapper class="govuk-!-margin-bottom-6">
                    <gds-input class="govuk-!-width-two-third"
                               asp-excludelabel
                               govuk-formgroup-asp-for="Name"
                               value="@Model.Name"
                               type="text" />
                </gds-input-wrapper>
            </gds-div-form-group>
        <button id="continue-button" class="govuk-button" data-module="govuk-button" name="action" type="submit" value="Continue">
                Continue
            </button>
    </form>

    <partial name="_HomeAndCheckAnswersLinks" />
</gds-div-grid-column-two-thirds>
