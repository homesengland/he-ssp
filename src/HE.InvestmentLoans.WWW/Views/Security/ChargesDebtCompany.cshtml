@using HE.InvestmentLoans.Contract.Security;
@model HE.InvestmentLoans.Contract.Security.SecurityViewModel;

@inject ModelExpressionProvider modelProvider
@{
    var (conditionalInputInvalid, inputErrors) = @ViewData.ModelState.GetErrors(modelProvider.GetExpressionText((HE.InvestmentLoans.Contract.Security.SecurityViewModel x) => x.ChargesDebtCompanyInfo));
    var (radioInvalid, radioErrors) = @ViewData.ModelState.GetErrors(modelProvider.GetExpressionText((HE.InvestmentLoans.Contract.Security.SecurityViewModel x) => x.ChargesDebtCompany));
}

<gds-div-grid-column-two-thirds>
    <form asp-controller="Security" asp-action="ChargesDebtCompany" asp-route-id="@Model.LoanApplicationId" asp-route-redirect="@Context.Request.Query["redirect"]" asp-method="post" novalidate>
        <gds-back-link href="@Url.Action("Back","Security", new {id = Model.LoanApplicationId, currentPage = SecurityState.ChargesDebtCompany})" text="Back" class="govuk-!-margin-bottom-8">
        </gds-back-link>

        <partial name="_ErrorSummaryPartial" model="null" />
        @Html.HiddenFor(x => x.LoanApplicationId)
        <gds-field-set>
            <gds-div-form-group invalid="radioInvalid">
                <gds-legend size="ControlSize.L">
                    <gds-fieldset-heading>
                        @SecurityPageTitles.ChargesDebt
                    </gds-fieldset-heading>
                </gds-legend>

                <gds-div-hint>
                    You may have also taken out a fixed or floating charge over the general assets in the company. This is a charge typically referred to as a Debenture.
                </gds-div-hint>
                @if (radioInvalid)
                {
                    <p id="charges-debt-company-error" class="govuk-error-message">
                        <span class="govuk-visually-hidden">Error:</span> @radioErrors
                    </p>
                }
                <gds-radio-yes-no asp-for="ChargesDebtCompany"
                                  inner-input-text="Tell us who holds the debenture. If there is more than one debenture holder, separate these with a comma. For example, Lloyds Bank, Royal Bank of Scotland."
                                  inner-input-for="ChargesDebtCompanyInfo"
                                  with-yes-input
                                  is-conditional-input-invalid="conditionalInputInvalid"
                                  conditional-input-error="@inputErrors"
                                  value="@Model.ChargesDebtCompany"
                                  inner-input-value="@Model.ChargesDebtCompanyInfo"
                                  class="govuk-!-margin-bottom-8"></gds-radio-yes-no>
            </gds-div-form-group>
            <button class="govuk-button" data-module="govuk-button" name="action" type="submit" value="@(Model.StateChanged?"Change":"Continue")" id="continue-button">
                Continue
            </button>
        </gds-field-set>
    </form>

    <partial name="_HomeAndCheckAnswersLinks" />
</gds-div-grid-column-two-thirds>

@await Html.YesNoConditionalInputScript(modelProvider.GetExpressionText((HE.InvestmentLoans.Contract.Security.SecurityViewModel x) => x.ChargesDebtCompany))
