@model HE.InvestmentLoans.WWW.Models.Organisation.CreateOrganisationModel
@{
    ViewData["Title"] = "Organisation Details";
}

<gds-div-grid-column-two-thirds>
    <gds-back-link class="govuk-!-margin-bottom-8" href="@Url.Action("SearchOrganization", "Organization")">Back</gds-back-link>

    <partial name="_ErrorSummaryPartial" model="null"/>

    <form asp-controller="Organization" asp-action="CreateOrganisation" asp-method="post" novalidate>
        <gds-h1 size="ControlSize.L">
            Organisation Details
        </gds-h1>

        <gds-p>
            Enter your organisationâ€™s name manually. This may mean you have not yet established your organisation, or we could not find it in our initial search.
        </gds-p>

        <gds-field-set role="group">
            <gds-input asp-excludelabel
                       govuk-formgroup-asp-for="Name"
                       value="@Model?.Name"/>
        </gds-field-set>

        <gds-h1 size="ControlSize.M">
            Registered address
        </gds-h1>

        <gds-p>
            If you have not established your organisation, enter the intended registered address.
        </gds-p>

        <gds-field-set role="group">
            <gds-input
                govuk-formgroup-asp-for="AddressLine1"
                name="AddressLine1"
                asp-labeltext="Address line 1"
                value=@Model?.AddressLine1/>

            <gds-input
                govuk-formgroup-asp-for="AddressLine2"
                name="AddressLine2"
                asp-labeltext="Address line 2 (optional)"
                value=@Model?.AddressLine2/>

            <gds-input
                govuk-formgroup-asp-for="TownOrCity"
                name="TownOrCity"
                asp-labeltext="Town or city"
                value=@Model?.TownOrCity/>

            <gds-input
                govuk-formgroup-asp-for="County"
                name="County"
                asp-labeltext="County (optional)"
                value=@Model?.County/>

            <gds-input
                govuk-formgroup-asp-for="Postcode"
                name="Postcode"
                class="govuk-!-width-one-half"
                asp-labeltext="Postcode"
                value=@Model?.Postcode/>

        </gds-field-set>

        <button class="govuk-button" data-module="govuk-button" name="action" type="submit" id="save-and-continue-button">
            Continue
        </button>
    </form>

</gds-div-grid-column-two-thirds>
